<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateFeed">

    <EditText
        android:id="@+id/create_feed_txt"
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        android:hint="Tell me what you feel..."
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="7" />

    <Button
        android:id="@+id/take_photo_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Take photo from gallery" />

    <Button
        android:id="@+id/take_photo_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Take photo from camera" />

    <TextView
        android:id="@+id/is_Uploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Uploaded"
        android:visibility="gone" />

    <Button
        android:id="@+id/uploaded_Remove"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="X"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/createfeed_camera"
            android:layout_width="140dp"
            android:layout_height="119dp"
            android:layout_margin="20dp"
            android:background="@drawable/darkblue_background"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/createfeed_gallery"
            android:layout_width="140dp"
            android:layout_height="119dp"
            android:layout_margin="20dp"
            android:background="@drawable/side_nav_bar"
            android:src="@android:drawable/ic_menu_camera" />
    </LinearLayout>

    <Button
        android:id="@+id/create_feed_submit_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="55dp"
        android:text="Share"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/create_waiting_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/create_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</LinearLayout>